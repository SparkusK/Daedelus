$(document).ready(function() {

  function calculateAvailableAmount() {
    var total = $("#job_total").val();
    var targeted_amount = $("#job_targeted_amount").val();
    var available_amount = total - targeted_amount;
    $("#job_still_available_amount").val(available_amount.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,'));
  }

  $('#job_total').change(function() {
    calculateAvailableAmount();
  });
  $('#job_targeted_amount').change(function() {
    calculateAvailableAmount();
  });

});
