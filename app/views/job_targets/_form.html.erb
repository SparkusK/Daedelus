<%= form_with(model: job_target, local: true) do |form| %>
  <% if job_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_target.errors.count, "error") %> prohibited this Job Target from being saved:</h2>

      <ul>
      <% job_target.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :job_id %>
      <%= collection_select(:job_target, # target table
                            :job_id,
                            Job.all, # selector function
                            :id, # index
                            :job_name, # text
                            {prompt: true},
                            {class: "custom-select"}) %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :section_id %>
      <%= collection_select(:job_target, # target table
                            :section_id,
                            Section.all, # selector function
                            :id, # index
                            :section_name, # text
                            {prompt: true},
                            {class: "custom-select"}) %>
    </div>
  </div>


  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :target_amount %>
      <%= form.text_field :target_amount, id: :job_target_target_amount, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Create Job Target", class: "btn btn-primary btn-large" %>
  </div>
<% end %>
