<div class="card" id="<%= job_target.id %>">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <h4 class="col-md-8"><%= job_target.job.jce_number %></h4>
      <h4 class="col-md-8"><%= job_target.section.name %></h4>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <small class="text-muted">TARGET TOTAL: </small><%= number_to_currency(job_target.target_amount, unit: "R") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10"></div>
      <div class="d-flex col-md-2">
        <%= button_to 'Edit', edit_job_target_path(job_target), remote: true, method: :get, class: "btn btn-primary" %>
        <%= button_to 'Remove', job_target, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

<br>
