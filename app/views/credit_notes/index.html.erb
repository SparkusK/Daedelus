<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-4">Credit Notes</h1>
    <section class="search-form col-md-8">
      <%= form_for :credit_notes, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Search credit notes",
                class: "form-control input-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<%= render partial: 'top_pager' %>

<section class="credit-note-panels">
  <% @credit_notes.each do |credit_note| %>
      <%= render credit_note %>
  <% end %>
</section>

<%= render partial: 'bottom_pager' %>
