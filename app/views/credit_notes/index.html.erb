<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-4">Credit Notes</h1>
    <section class="search-form col-md-8">
      <%= form_for :employees, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Supplier name or job number",
                class: "form-control input-lg" %>
          <span class="input-group-btn">
            <%= submit_tag "Find Credit Notes",
                  class: "btn btn-primary btn-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<br>
<section class="top-pager">
  <div class="d-flex justify-content-between">
    <%= will_paginate @credit_notes, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    <%= button_to 'New Credit Note', new_credit_note_path, class: "btn", method: :get %>
  </div>
</section>
<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Creditor order</th>
      <th>Payment type</th>
      <th>Amount paid</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_notes.each do |credit_note| %>
      <%= render credit_note %>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @credit_notes, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>
