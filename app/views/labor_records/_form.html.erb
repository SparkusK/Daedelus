<%= form_with(model: labor_record, local: true) do |form| %>
  <% if labor_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(labor_record.errors.count, "error") %> prohibited this labor_record from being saved:</h2>

      <ul>
      <% labor_record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="col-md-6">
      <%= form.label :employee_id %>
      <%= collection_select(:labor_record,
                          :employee_id,
                          Employee.valid,
                          :id,
                          :employee_name,
                          {prompt: true}, {class: "custom-select"}) %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :labor_date %> </br>
      <span>
        <%= form.text_field :labor_date,
                             autocomplete: :off,
                             class: "form-control datepicker",
                             placeholder: "yyyy-mm-dd",
                             id: "labor_record_date" %>
      </span>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :section %>
      <%= collection_select(:labor_record,
        :section_id,
        Section.all,
        :id,
        :name,
        {prompt: true}, {class: "custom-select"}) %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :job_id %>
        <%= collection_select(:labor_record,
          :job_id,
          get_all_jobs,
          :id,
          :job_name,
          {prompt: true}, {class: "custom-select"}) %>
        </div>
      </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :hours %>
      <%= form.text_field :hours, id: :labor_record_hours, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :total_before %>
      <%= form.text_field :total_before, id: :labor_record_total_before, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :total_after %>
      <%= form.text_field :total_after, id: :labor_record_total_after, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label "Overtime hours for [Month]" %>
      <%= form.text_field :overtime_hours, id: :overtime_hours, class: "form-control", readonly: true %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label "Hours for [Employee] before" %>
      <%= form.text_field :overtime_hours, id: :overtime_hours, class: "form-control", readonly: true %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label "Hours for [Employee] after" %>
      <%= form.text_field :overtime_hours, id: :overtime_hours, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
    </div>
    <div class="form-group col-md-4">
      <%= form.label "Total Before with Overtime" %>
      <%= form.text_field :overtime_hours, id: :overtime_hours, class: "form-control", readonly: true %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label "Total After with Overtime" %>
      <%= form.text_field :overtime_hours, id: :overtime_hours, class: "form-control", readonly: true %>
    </div>
  </div>



  <div class="actions">
    <%= form.submit "Submit Labor Record", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
