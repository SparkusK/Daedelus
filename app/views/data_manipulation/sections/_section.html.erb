<div class="card" id="<%= section.id %>">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <h4 class="col-md-8"><%= section.name %></h4>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <small class="text-muted">MANAGED BY: </small><%= section.manager.nil? ? "No manager yet" : section.manager.manager_name %>
      </div>
      <div class="col-md-6">
        <small class="text-muted">OVERHEADS: </small><%= number_to_currency(section.overheads, unit: "R") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10"></div>
      <div class="d-flex col-md-2">
        <%= button_to 'Edit', edit_section_path(section), remote: true, method: :get, class: "btn btn-primary" %>
        <%= button_to 'Remove', section, method: :delete, data: { confirm: Section.get_removal_confirmation(section.id) }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

<br>
