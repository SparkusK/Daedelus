<%= form_with(model: job_target, local: true) do |form| %>
  <% if job_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_target.errors.count, "error") %> prohibited this job_target from being saved:</h2>

      <ul>
      <% job_target.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :target_date %> <br>
      <span>
        <%= form.text_field :target_date,
                             autocomplete: :off,
                             class: "form-control datepicker",
                             placeholder: "yyyy-mm-dd" %>
      </span>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :invoice_number %>
      <%= form.text_field :invoice_number, id: :job_target_invoice_number, class: "form-control" %>
    </div>

  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :section %>
      <%= collection_select(
            :job_target,
            :section_id,
            Section.all,
            :id,
            :section_name,
            { prompt: true },
            { class: "custom-select" }) %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :job %>
      <%= collection_select(
            :job_target,
            :job_id,
            Job.all,
            :id,
            :job_name,
            {prompt: true},
            { class: "custom-select",
              id: "job_target_job_id" }
          ) %>
    </div>
  </div>


  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :remarks %>
      <%= form.text_field :remarks, id: :job_target_remarks, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :details %>
      <%= form.text_field :details, id: :job_target_details, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :target_amount %>
      <%= form.text_field :target_amount, id: :job_target_target_amount, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :remaining_amount %>
      <%= form.text_field :remaining_amount, id: :job_target_remaining_amount, class: "form-control", readonly: true %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :job_total %>
      <%= form.text_field :job_total, id: :job_target_job_total, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Create Job Target", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
