<%= render partial: "shared/cards/card", locals: {
  entity: job,
  card_header_text: job.jce_number,
  card_subheader_text: job.receive_date.strftime("%a, %d %b %Y"),
  rows: [
    {
      header1: "SECTION:",        text1: job.section.name,
      header2: "CONTACT PERSON:", text2: job.contact_person,
    },
    {
      header1: "RESPONSIBLE PERSON:",  text1: job.responsible_person,
      header2: "QUOTATION REFERENCE:", text2: job.quotation_code
    },
    {
      header1: "JOB DESCRIPTION:", text1: job.work_description,
      header2: "", text2: ""
    },
    {
      header1: "JOB TOTAL", text1: number_to_currency(job.total, unit: "R"),
      header2: "", text2: ""
    }
  ],
  path: edit_job_path(job)
} %>
