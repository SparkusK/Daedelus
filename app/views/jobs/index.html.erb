<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-3">Jobs</h1>
    <section class="search-form col-md-9">
      <%= form_for :employees, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Section name or JCE number",
                class: "form-control input-lg" %>
          <span class="input-group-btn">
            <%= submit_tag "Find Jobs",
                  class: "btn btn-primary btn-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Receive date</th>
      <th>Section</th>
      <th>Contact person</th>
      <th>Balow section</th>
      <th>Total</th>
      <th>Work description</th>
      <th>Jce number</th>
      <th>Order</th>
      <th>Quotation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.receive_date.strftime("%a, %d %b %Y") %></td>
        <td><%= job.section.name %></td>
        <td><%= job.contact_person %></td>
        <td><%= job.balow_section %></td>
        <td><%= number_to_currency(job.total, unit: "R") %></td>
        <td><%= job.work_description %></td>
        <td><%= job.jce_number %></td>
        <td><%= job.debtor_order.id %></td>
        <td><%= job.quotation.code %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @jobs, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>

<%= link_to 'New Job', new_job_path %>
