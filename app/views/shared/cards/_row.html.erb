<div class="row d-flex justify-content-between">
  <% if row[:header2].empty? %>
    <div class="col-md-10">
      <h6><small class="text-muted"><%= row[:header1] %> </small> <%= row[:text1] %></h6>
    </div>
  <% else %>
    <div class="col-md-6">
      <h6><small class="text-muted"><%= row[:header1] %> </small> <%= row[:text1] %></h6>
    </div>
    <div class="col-md-6">
      <h6><small class="text-muted"><%= row[:header2] %> </small> <%= row[:text2] %></h6>
    </div>
  <% end %>
</div>
