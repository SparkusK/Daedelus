<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-5">Debtor Payments</h1>
    <section class="search-form col-md-7">
      <%= form_for :employees, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Customer name or invoice code",
                class: "form-control input-lg" %>
          <span class="input-group-btn">
            <%= submit_tag "Find Debtor Orders",
                  class: "btn btn-primary btn-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Debtor order</th>
      <th>Payment amount</th>
      <th>Payment date</th>
      <th>Payment type</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debtor_payments.each do |debtor_payment| %>
      <tr>
        <td><%= debtor_payment.debtor_order.debtor_order_name %></td>
        <td><%= number_to_currency(debtor_payment.payment_amount, unit: "R") %></td>
        <td><%= debtor_payment.payment_date %></td>
        <td><%= debtor_payment.payment_type %></td>
        <td><%= debtor_payment.note %></td>
        <td><%= link_to 'Show', debtor_payment %></td>
        <td><%= link_to 'Edit', edit_debtor_payment_path(debtor_payment) %></td>
        <td><%= link_to 'Destroy', debtor_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @debtor_payments, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>

<%= link_to 'New Debtor Payment', new_debtor_payment_path %>
