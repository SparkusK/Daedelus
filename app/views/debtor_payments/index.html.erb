<section class="header">
  <h1>Debtor Payments</h1>
</section>
<section class="search-form">
  <%= form_for :debtor_payments, method: :get do |f| %>
    <%= label_tag :keywords, nil, class: "sr-only" %>
      <div class="input-group input-group-lg">
        <%= text_field_tag :keywords, nil,
            placeholder: "Search debtor payments",
            class: "form-control input-lg" %>
        <%= image_tag("loading.gif", class: "img-thumbnail loading_gif") %>
        <%= image_tag("typing.gif", class: "img-thumbnail typing_gif") %>
    </div>
  <% end %>
</section>


<%= render partial: 'top_pager' %>

<%= render partial: 'shared/dates', locals: { path: "/debtor_payments" } %>

<section class="debtor-payment-panels">
  <% @debtor_payments.each do |debtor_payment| %>
      <%= render debtor_payment %>
  <% end %>
</section>

<%= render partial: 'bottom_pager' %>
