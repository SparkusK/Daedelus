<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<section class="search-form">
  <%= form_for :employees, method: :get do |f| %>
    <div class="input-group input-group-lg">
      <%= label_tag :keywords, nil, class: "sr-only" %>
      <%= text_field_tag :keywords, nil,
            placeholder: "Invoice code",
            class: "form-control input-lg" %>
      <span class="input-group-btn">
        <%= submit_tag "Find Invoices",
              class: "btn btn-primary btn-lg" %>
      </span>
    </div>
  <% end %>
</section>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.code %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @invoices, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
