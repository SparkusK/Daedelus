<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-4">Debtor Orders</h1>
    <section class="search-form col-md-8">
      <%= form_for :debtor_orders, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Search debtor orders",
                class: "form-control input-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<%= render partial: 'top_pager' %>

<section class="debtor-order-panels">
  <% @debtor_orders.each do |debtor_order| %>
      <%= render debtor_order %>
  <% end %>
</section>

<%= render partial: 'bottom_pager' %>
