<p id="notice"><%= notice %></p>

<h1>Debtor Orders</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Job</th>
      <th>Invoice</th>
      <th>S/A number</th>
      <th>Value including tax</th>
      <th>Tax amount</th>
      <th>Value excluding tax</th>
      <th>Still owed amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debtor_orders.each do |debtor_order| %>
      <tr>
        <td><%= debtor_order.customer.customer_name %></td>
        <% if debtor_order.job.nil? %>
          <td>No Job</td>
        <% else %>
          <td><%= debtor_order.job.job_name %></td>
        <% end %>
        <td><%= debtor_order.invoice.code %></td>
        <td><%= debtor_order.SA_number %></td>
        <td><%= debtor_order.value_including_tax.truncate(2) %></td>
        <td><%= debtor_order.tax_amount.truncate(2) %></td>
        <td><%= debtor_order.value_excluding_tax.truncate(2) %></td>
        <td><%= debtor_order.still_owed_amount.truncate(2) %></td>
        <td><%= link_to 'Show', debtor_order %></td>
        <td><%= link_to 'Edit', edit_debtor_order_path(debtor_order) %></td>
        <td><%= link_to 'Destroy', debtor_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @debtor_orders, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>

<%= link_to 'New Debtor Order', new_debtor_order_path %>
