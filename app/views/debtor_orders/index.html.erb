<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-4">Debtor Orders</h1>
    <section class="search-form col-md-8">
      <%= form_for :employees, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Customer name or invoice code",
                class: "form-control input-lg" %>
          <span class="input-group-btn">
            <%= submit_tag "Find Debtor Orders",
                  class: "btn btn-primary btn-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<br>
<section class="top-pager">
  <div class="d-flex justify-content-between">
    <%= will_paginate @debtor_orders, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    <%= button_to 'New Debtor Order', new_debtor_order_path, class: "btn" %>

  </div>
</section>
<br>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Job</th>
      <th>Invoice</th>
      <th>S/A number</th>
      <th>Value including tax</th>
      <th>Tax amount</th>
      <th>Value excluding tax</th>
      <th>Still owed amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debtor_orders.each do |debtor_order| %>
      <%= render debtor_order %>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @debtor_orders, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>
