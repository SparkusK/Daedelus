<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-3">Customers</h1>
    <section class="search-form col-md-9">
      <%= form_for :customers, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <%= text_field_tag :keywords, nil,
                placeholder: "Search by name, email or phone",
                class: "form-control input-lg" %>
          </span>
        </div>
      <% end %>
    </section>
  </div>
</section>

<%= render partial: 'top_pager' %>

<section class="customer-panels">
  <% @customers.each do |customer| %>
      <%= render customer %>
  <% end %>
</section>

<%= render partial: 'bottom_pager' %>
