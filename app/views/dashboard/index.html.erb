<header>
  <% if current_user.nil? %>
  <h1> Welcome to Daedelus! </h1>
  <p> To start, you need to <%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "Log in", new_user_session_path %>. </p>
  <% else %>
  <h1>
    Welcome, <%= current_user.email %>.
    <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
  </h1>
  <% end %>
</header>
