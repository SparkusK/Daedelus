<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<section class="search-form">
  <%= form_for :employees, method: :get do |f| %>
    <div class="input-group input-group-lg">
      <%= label_tag :keywords, nil, class: "sr-only" %>
      <%= text_field_tag :keywords, nil,
            placeholder: "First name or last name",
            class: "form-control input-lg" %>
      <span class="input-group-btn">
        <%= submit_tag "Find Employees",
              class: "btn btn-primary btn-lg" %>
      </span>
    </div>
  <% end %>
</section>
<br>
<section class="top-pager">

<%= will_paginate @employees, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

</section>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Occupation</th>
      <th>Section</th>
      <th>Company number</th>
      <th>Net rate</th>
      <th>Inclusive rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr class="<%= employee.id %>">
        <%= render employee %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= will_paginate @employees, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<br>

<%= link_to 'New Employee', new_employee_path %>
