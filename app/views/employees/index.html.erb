<p id="notice"><%= notice %></p>

<section class="header">
  <div class="d-flex justify-content-between">
    <h1 class="col-md-3">Employees</h1>
    <section class="search-form col-md-9">
      <%= form_for :employees, method: :get do |f| %>
        <div class="input-group input-group-lg">
          <%= label_tag :keywords, nil, class: "sr-only" %>
          <div class="input-group-prepend">
            <%= image_tag("loading.gif", class: "loading_gif") %>
            <%= image_tag("typing.gif", class: "typing_gif") %>
          </div>
          <%= text_field_tag :keywords, nil,
                placeholder: "Search employees",
                class: "form-control input-lg" %>
        </div>
      <% end %>
    </section>
  </div>
</section>

<%= render partial: 'top_pager' %>

<section class="employee-panels">
  <% @employees.each do |employee| %>
      <%= render employee %>
  <% end %>
</section>

<%= render partial: 'bottom_pager' %>
